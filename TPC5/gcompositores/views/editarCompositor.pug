extends layout

block content
    .w3-card-4
        header.w3-container.w3-pink
            h1= titulo
        .w3-container 
           form.w3-continer(method= 'POST')
				fieldset
					legend Metadata
					label ID 
					input.w3-input.w3-round(type='text', name='id', value=compositor.id, readonly)
					label Nome
					input.w3-input.w3-round(type='text', name='nome', value=compositor.nome)
					label Período 
					input.w3-input.w3-round(type='text', name='periodo', value=compositor.periodo.nome)
					label Data de Nascimento
					input.w3-input.w3-round(type='date', name='dataNasc', value=compositor.dataNasc)
					label Data do Óbito
					input.w3-input.w3-round(type='date', name='dataObito', value=compositor.dataObito)
                    label Bio
					input.w3-input.w3-round(type='textarea', name='bio', value=compositor.bio)

				button.w3-button.w3-pink(type='submit', method='POST', action='/compositores/editar') Editar


        footer.w3-container.w3-pink
            address Gerado por A100896 :: EngWeb2024 em #{data}
            a.w3-button.w3-pink(href="/compositores") Voltar à lista de compositores 